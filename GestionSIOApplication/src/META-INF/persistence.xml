<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="GestionSIOApplication_PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>modele.gestion_sio.Visite</class>
    <class>modele.gestion_sio.Utilisateur</class>
    <class>modele.gestion_sio.Etudiant</class>
    <class>modele.gestion_sio.Option</class>
    <class>modele.gestion_sio.Professionnel</class>
    <class>modele.gestion_sio.Professeur</class>
    <class>modele.gestion_sio.Stage</class>
    <class>modele.gestion_sio.Organisation</class>
    <class>modele.gestion_sio.Personne</class>
    <class>modele.gestion_sio.Annee</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/gestion_sio?zeroDateTimeBehavior=convertToNull&amp;serverTimezone=Europe/Paris"/>
      <property name="javax.persistence.jdbc.user" value="gestion_sio_user"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="secret"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
 